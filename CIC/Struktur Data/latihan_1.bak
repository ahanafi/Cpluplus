    Program menghitun rata-rata dari n bilangan yang diinputkan
*/

#include <iostream>
#include <stdio.h>

main()
{
    /* Deklarasi */
    float n, bil, jumlah;
    float rata;

    cout<<"Masukkan banyak bilangan : ";
    cin>>n;
    jumlah = 0;
    for(int i=0; i<n; i++)
    {
        cout<<"Masukkan bilangan ke-"<<i+1<<" : ";
        cin>>bil;
        jumlah = bil + jumlah;
    }
    rata = jumlah / n;
    cout<<"Rata-rata dari "<<n<<" bilangan yang diinputkan adalah "<<rata;
    getch();
}
